#====================================================================
# Makefile	SIMPLE
#====================================================================
#====================================================================
#	Macro & Assembler flags
#====================================================================

STADDR = 802000
ALNFLAGS = -l -a $(STADDR) x 4000

#====================================================================
#	Default Rules
#====================================================================
.SUFFIXES:	.o .s

.s.o:
	mac $*

.SUFFIXES:	.ot .gas

.gas.ot:
	mac -dmac=1 -o$*.ot $*.gas

.SUFFIXES:	.oj .das

.das.oj:
	mac -dmac=1 -o$*.oj $*.das

#====================================================================
#	EXECUTABLES
#====================================================================

simple.abs: simple.o simpsyn.oj
	aln $(ALNFLAGS) simple.o simpsyn.oj
