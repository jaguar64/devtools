#====================================================================
#       Paths
#====================================================================
#
HOME   = d:\jaguar

#====================================================================
#       Macro & Assembler flags
#====================================================================

STADDR = 802000
MACFLAGS = -fb -g
ALNFLAGS = -v -v -e -g -l -a $(STADDR) x 4000

#====================================================================
#       Default Rules
#====================================================================
.SUFFIXES:      .o .s

.s.o:
	mac $(MACFLAGS) $*

#====================================================================
#       EXECUTABLES
#====================================================================

OBJ =   jagmand.o intserv.o vidinit.o jlister.o \
	clearjag.o mandle.o calcmand.o
 
jagmand.abs: $(OBJ)
	aln $(ALNFLAGS) $(OBJ)

